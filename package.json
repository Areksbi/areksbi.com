{
  "name": "web-static-scaffolding",
  "version": "1.1.0",
  "description": "A scaffolding to generate static web pages with a structure of atoms, molecules and organisms.",
  "main": "index.js",
  "scripts": {
    "generate": "node ./config/generator/index.js",
    "start": "webpack-dev-server --open --config webpack.dev.js",
    "dev": "NODE_ENV=development webpack --config webpack.dev.js",
    "prod": "NODE_ENV=production webpack --config webpack.prod.js",
    "deploy": "npm run prod && node_modules/.bin/firebase deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Areksbi/web-static-scaffolding.git"
  },
  "keywords": [
    "web",
    "static",
    "scaffolding",
    "html",
    "css",
    "javascript",
    "pug",
    "webpack",
    "atom",
    "molecule",
    "organism"
  ],
  "author": "Roman Baran",
  "license": "MIT",
  "engines": {
    "node": "^10.15.0",
    "npm": "^6.4.1"
  },
  "bugs": {
    "url": "https://github.com/Areksbi/web-static-scaffolding/issues"
  },
  "homepage": "https://github.com/Areksbi/web-static-scaffolding#readme",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.1.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.2.2",
    "eslint-config-google": "^0.13.0",
    "firebase-tools": "^7.6.2",
    "fs": "0.0.1-security",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.3",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "pug": "^2.0.4",
    "pug-loader": "^2.4.0",
    "sass": "^1.22.9",
    "sass-loader": "^7.1.0",
    "semver": "^6.3.0",
    "stylelint": "^10.1.0",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1",
    "yarn": "^1.17.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --syntax=scss --fix",
      "prettier --parser postcss --write",
      "git add"
    ],
    "*.js": [
      "eslint . --fix",
      "git add"
    ]
  }
}
