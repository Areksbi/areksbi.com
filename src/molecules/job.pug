mixin job(companyName, companyImg, companyLink, jobTitle, description, startDate, endDate='Present')
  article
    header
      a(href=companyLink target='_blank' title=`Go to ${companyName} site` rel='noopener noreferrer')
        img(src=companyImg alt=`${companyName} logo`)
      h3
        a(href=companyLink target='_blank' rel='noopener noreferrer') #{companyName}
        |  - #{jobTitle}
      p
        i #{startDate} - #{endDate}
    section !{description}
